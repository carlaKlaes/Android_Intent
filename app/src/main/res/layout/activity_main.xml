<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="109dp"
        android:onClick="addAlarm"/>

    <Button
        android:id="@+id/btn_photo"
        android:layout_below="@+id/btn_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="109dp"
        android:onClick="addPhoto"/>

    <Button
        android:id="@+id/btn_contact"
        android:layout_below="@+id/btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="109dp"
        android:onClick="addNewContact"/>

    <Button
        android:id="@+id/btn_openbrowser"
        android:layout_below="@+id/btn_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open URL"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="109dp"
        android:onClick="openbroser"/>

    <Button
        android:id="@+id/btn_openemail"
        android:layout_below="@+id/btn_openbrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="109dp"
        android:onClick="openemail"/>

    <Button
        android:id="@+id/btn_audio"
        android:layout_below="@+id/btn_openemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play audio file"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="109dp"
        android:onClick="openaudio"/>

</RelativeLayout>