<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alarm">

    <EditText
        android:id="@+id/et_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="message"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/et_hour"
        android:layout_below="@+id/et_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="hour" />
    <EditText
        android:id="@+id/et_min"
        android:layout_below="@+id/et_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="minute" />

    <CheckBox
        android:id="@+id/cb_vibrate"
        android:layout_below="@+id/et_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrate?" />
    <CheckBox
        android:id="@+id/cb_mon"
        android:layout_below="@+id/cb_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MON" />
    <CheckBox
        android:id="@+id/cb_tue"
        android:layout_below="@+id/cb_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TUE" />
    <CheckBox
        android:id="@+id/cb_wed"
        android:layout_below="@+id/cb_tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WED" />
    <CheckBox
        android:id="@+id/cb_thu"
        android:layout_below="@+id/cb_wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THU" />
    <CheckBox
        android:id="@+id/cb_fri"
        android:layout_below="@+id/cb_thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRI" />
    <CheckBox
        android:id="@+id/cb_sat"
        android:layout_below="@+id/cb_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAT" />
    <CheckBox
        android:id="@+id/cb_sun"
        android:layout_below="@+id/cb_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUN" />

    <Button
        android:id="@+id/btn_addAlarm"
        android:layout_below="@+id/cb_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Alarm"
        android:onClick="setAlarm"/>


</RelativeLayout>